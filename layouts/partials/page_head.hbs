{{#*inline "collectionNavLink"}}
  <li><a href="{{ metadata.path }}">{{ metadata.title }}</a></li>
{{/inline}}

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">

    <title>{{siteTitle}} - {{ title }}</title>
  </head>
  <body>
    <header>
      <h1>{{siteTitle}}</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          {{#each collections}}
            {{> collectionNavLink this }}
          {{/each}}
        </ul>
      </nav>
    </header>
    <main>
      <h2>{{ title }}</h2>
