{{#*inline "collectionNavLink"}}
  <li><a href="{{ metadata.path }}">{{ metadata.title }}</a></li>
{{/inline}}

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
    <link rel="stylesheet" href="/css/rpgnotes.css">

    {{#each cssFiles}}
      <link rel="stylesheet" href="{{ this }}">
    {{/each}}

    {{#if isSearch}}
      <script type="module" src="/js/search.js"></script>
    {{/if}}
    {{#if shopping}}
      <script type="module" src="/js/shopping.js"></script>
    {{/if}}

    {{#if strippedTitle }}
      <title>{{{ strippedTitle }}} — {{ siteTitle }}</title>
    {{else if title}}
      <title>{{{ title }}} — {{ siteTitle }}</title>
    {{else}}
      <title>{{ siteTitle }}</title>
    {{/if}}
  </head>
  <body>
    <header>
      <h1>{{ siteTitle }}</h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          {{#each collections}}
            {{> collectionNavLink this }}
          {{/each}}
        </ul>
      </nav>
      <form method="get" action="/search/">
        <input id="search-input" type="search" name="q" autocomplete="off" placeholder="e.g. good duck">
        <button>Search</button>
      </form>
    </header>
    <main>
      {{#if title }}
        <h2 id="page-header">{{{ title }}}</h2>
      {{/if}}
